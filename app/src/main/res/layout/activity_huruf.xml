<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbluesky"
    tools:context="com.example.eladw.belajarabjad.Huruf">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=" " />

    <ImageButton
        android:id="@+id/btna"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="17dp"
        android:layout_toLeftOf="@+id/btnb"
        android:layout_toStartOf="@+id/btnb"
        android:background="@null"
        app:srcCompat="@drawable/ap" />

    <ImageButton
        android:id="@+id/btnb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/btna"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:background="@null"
        app:srcCompat="@drawable/bp" />

    <ImageButton
        android:id="@+id/btnc"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/btnb"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        app:srcCompat="@drawable/cp"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/btnd"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/btnc"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/btnc"
        android:layout_toRightOf="@+id/btnc"
        app:srcCompat="@drawable/dp"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/btne"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageView"
        android:layout_alignLeft="@+id/btna"
        android:layout_alignStart="@+id/btna"
        android:background="@null"
        app:srcCompat="@drawable/ep" />

    <ImageButton
        android:id="@+id/btnf"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/btnb"
        android:layout_alignStart="@+id/btnb"
        android:layout_alignTop="@+id/btne"
        app:srcCompat="@drawable/fp"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/btng"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageView"
        android:layout_alignLeft="@+id/btnc"
        android:layout_alignStart="@+id/btnc"
        android:background="@null"
        app:srcCompat="@drawable/gp" />

    <ImageButton
        android:id="@+id/btnh"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/btnd"
        android:layout_alignStart="@+id/btnd"
        android:layout_alignTop="@+id/btng"
        app:srcCompat="@drawable/hp"
        android:background="@null"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/tepi"
        android:id="@+id/imageView" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/back"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/back"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/next"
        android:background="@null"/>

</RelativeLayout>
